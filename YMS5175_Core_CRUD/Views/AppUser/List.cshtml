
@{
    ViewData["Title"] = "List";
}

@model IEnumerable<AppUser>

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Users List</h4>
                </div>
                <div class="card-body">
                    <div class="table table-responsive-sm">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Status</th>
                                    <th>Create Date</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Password</td>
                                        <td>@item.Status</td>
                                        <td>@item.CreateDate</td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a> 
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Create" class="btn btn-outline-info btn-block">Create the New One</a>
                </div>
            </div>
        </div>
    </div>
</div>

